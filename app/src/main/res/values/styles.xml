<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light" />

    <style name="bb10theme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:editTextStyle">@style/bbui_et</item>
        <item name="android:autoCompleteTextViewStyle">@style/bbui_act</item>
        <item name="android:buttonStyle">@style/bbui_bt</item>
        <item name="android:spinnerStyle">@style/bbui_sp </item>
        <item name="android:windowBackground">@color/bbui_bg</item>
		<item name="android:listViewStyle">@style/bbui_lvs</item>
    </style>

    <style name="bbui_lvs" parent="@android:style/Widget.ListView">
    	<item name="android:divider">@color/bbui_dv</item>
    	<item name="android:dividerHeight">3dp</item>
    </style>
    
    <style name="bbui_act" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:background">@drawable/bbui_etsl</item>
    </style>

    <style name="bbui_et" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bbui_etsl</item>
    </style>

    <style name="bbui_sp" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/bbui_spsl</item>
        <item name="android:textColor">@color/bbui_bt</item>
    </style>

    <style name="bbui_bt" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/bbui_btsl</item>
        <item name="android:textColor">@color/bbui_bt</item>
    </style>

    
        
    <style name="fill18">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="fill24">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="wrap24">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="wrap18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cwrap24" parent="wrap24">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="fillw24" parent="fill24">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <color name="bbui_bg">#262626</color>
    <color name="bbui_bt">#FFFFFF</color>
	<color name="bbui_dv">#242424</color>
</resources>