<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pl_list"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="0.2" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pl_add" >
        </ListView>

        <TextView
            android:id="@android:id/empty"
            style="@style/wrap24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/pl_add"
            android:text="@string/pl_null" >
        </TextView>
		<LinearLayout 
		    style="@style/wrap24"
		    android:orientation="vertical"
		    android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"   
		    >
		    
        <Button
            android:id="@+id/pl_add"
            style="@style/wrap24"
            android:onClick="addProduct"
            android:text="@string/pl_add" />
        
        
        <Button
            style="@style/wrap24"
            android:onClick="menu"
            android:text="@string/menu" />
		    
		    
		</LinearLayout>
    </RelativeLayout>

    <WebView
        android:id="@+id/pl_preview"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="0.3"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20sp"
        android:textSize="20sp" >
    </WebView>

    <RelativeLayout
        android:id="@+id/pl_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/pl_back"
            style="@style/wrap24"
            android:layout_alignParentLeft="true"
            android:onClick="back"
            android:text="@string/back" >
        </Button>

        <TextView
            style="@style/wrap18"
            android:layout_alignBottom="@+id/pl_send"
            android:layout_toLeftOf="@+id/pl_send"
            android:layout_toRightOf="@+id/pl_back"
            android:gravity="center"
            android:text="@string/pl_title" />

        <Button
            android:id="@+id/pl_send"
            style="@style/wrap24"
            android:layout_alignParentRight="true"
            android:onClick="send"
            android:text="@string/pl_preview" >
        </Button>
    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/David/SkyDrive/Android%20Studio%20Projects/Invoicer/app/src/main/res/layout/pl_list.xml -->